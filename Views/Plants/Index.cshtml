@model IEnumerable<TestFarm.Models.Plant>

@{
    ViewBag.Title = "Plant List";
}

<div class="card-deck col-4">
    <div class="container-fluid mt-4">
        <div class="row justify-content-center">
            <div class="col-md-auto">
                @foreach (var p in Model)
                {
                    <div class="card border-dark m-1 p-1" style="max-width: 18rem;">
                        <div class="card-header">
                            <h3>@p.Name</h3>
                        </div>
                        <span class="badge badge-pill badge-primary" style="float: right">$40</span>
                        <div class="card-body bg-secondary p-1">
                            <div class="card-text text-light p-1">@p.CategoryNavigation.Name</div>
                        </div>
                        <img class="card-img-top" src="~/images/@p.Image" asp-append-version="true" />
                        <div class="card-footer text-center">
                            <a asp-controller="plant" asp-action="details" asp-route-Id="@p.PlantId"
                                class="btn btn-primary">View</a>
                            <a href="#" class="btn btn-primary">Edit</a>
                            <a href="#" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

