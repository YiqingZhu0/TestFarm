@model TestFarm.ViewModels.TowerDetailsViewModel

@{
    ViewBag.Title = Model.PageTitle;
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Tower.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/@Model.Tower.TowerTypeNavigation.Image" asp-append-version="true" />

                <h4>SKU Id: @Model.Tower.TowerId</h4>
                <h4>Size: @Model.Tower.TowerTypeNavigation.Size</h4>
            </div>

            <div class="card-footer text-center">
                <a asp-controller="tower" asp-action="index"
                   class="btn btn-primary">Back</a>
                <a asp-controller="productiontower" asp-action="index" class="btn btn-primary">View Plants</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/CustomScript.js"></script>
}
