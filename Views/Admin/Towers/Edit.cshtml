@model Tower


@{
    ViewBag.Title = "Edit Tower";
    Layout = "_AdminLayout";
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="TowerId" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TowerType" class="control-label"></label>
        <select class="form-control" asp-for="TowerType" asp-items="ViewBag.TowerType">
            <option disabled selected value="">Select a Type</option>
        </select>
        @*<input asp-for="Category" class="form-control" />*@
    </div>
    <div class="form-group">
        <label asp-for="Location" class="control-label"></label>
        <select class="form-control" asp-for="Location" asp-items="ViewBag.Location">
            <option disabled selected value="">Select a Location</option>
        </select>
        @*<input asp-for="Size" class="form-control" />*@
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
